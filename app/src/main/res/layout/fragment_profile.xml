<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">


    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/opening_background"
        android:shadowColor="#E7B6B6" />

    <TextView
        android:id="@+id/profileText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/white"
        android:text="Profile"
        android:textSize="34sp"
        android:translationX="150dp"
        android:translationY="10dp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="97dp"
        android:layout_height="101dp"
        android:translationX="150dp"
        android:translationY="80dp"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/nameText"
        android:layout_width="97dp"
        android:layout_height="wrap_content"
        android:text="NAME"
        android:textColor="#6E6E6E"
        android:textSize="14sp"
        android:translationX="40dp"
        android:translationY="190dp" />

    <TextView
        android:id="@+id/GTIDText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GT ID "
        android:textColor="#6E6E6E"
        android:textSize="14sp"
        android:translationX="40dp"
        android:translationY="230dp" />

    <TextView
        android:id="@+id/contactInfoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Info"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:translationX="120dp"
        android:translationY="305dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

    <View
        android:id="@+id/profileDivider"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="?android:attr/listDivider"
        android:translationY="305dp"
        android:visibility="visible"
        tools:visibility="visible" />

    <View
        android:id="@+id/profileDivider2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="?android:attr/listDivider"
        android:translationY="500dp"
        android:visibility="visible"
        tools:visibility="visible" />

    <View
        android:id="@+id/profileDivider3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="?android:attr/listDivider"
        android:translationY="0dp"
        android:visibility="visible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/PhoneText"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="PHONE NUMBER"
        android:textColor="#6E6E6E"
        android:textSize="14sp"
        android:translationX="40dp"
        android:translationY="360dp"
        />

    <CheckBox
        android:id="@+id/phoneCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make public"
        android:translationX="280dp"
        android:translationY="350dp" />

    <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:ems="10"
        android:inputType="phone"

        android:translationX="40dp"
        android:translationY="360dp"
        android:width="300dp"

        />

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:ems="10"
        android:text="Placeholder"
        android:textSize="14sp"

        android:translationX="40dp"
        android:translationY="430dp"
        android:width="300dp"
        />

    <CheckBox
        android:id="@+id/emailCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make public"
        android:translationX="280dp"
        android:translationY="420dp" />

    <TextView
        android:id="@+id/settingsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:translationX="150dp"
        android:translationY="500dp" />

    <TextView
        android:id="@+id/notifText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Allow Notifications?"
        android:textSize="20sp"
        android:translationX="100dp"
        android:translationY="580dp" />

    <Switch
        android:id="@+id/notifsSwitch"
        android:layout_width="59dp"
        android:layout_height="50dp"
        android:translationX="300dp"
        android:translationY="570dp" />

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue"
        android:text="Delete Account"
        android:textColorLink="#DE2020"

        android:translationX="120dp"
        android:translationY="680dp" />

    <Button
        android:id="@+id/savebutton"
        android:text="Save Changes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue"
        android:translationX="125dp"
        android:translationY="630dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameTextEdit"
        android:translationX="40dp"
        android:translationY="190dp"
        android:width="300dp"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gtidTextEdit"
        android:translationX="40dp"
        android:translationY="230dp"
        android:width="300dp"
        />

    <ImageButton
        android:id="@+id/logoutButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/logout_button"
        android:translationX="355dp"
        android:translationY="10dp"
        />


</FrameLayout>