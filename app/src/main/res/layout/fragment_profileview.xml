<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">


    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F8EED2"
        android:shadowColor="#E7B6B6" />

    <TextView
        android:id="@+id/profileText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Profile"
        android:textSize="34sp"
        android:translationX="150dp"
        android:translationY="10dp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationX="140dp"
        android:translationY="70dp"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/nameText"
        android:layout_width="97dp"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:textSize="24sp"
        android:translationX="80dp"
        android:translationY="230dp" />

    <TextView
        android:id="@+id/GTIDText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GT ID: "
        android:textSize="24sp"
        android:translationX="80dp"
        android:translationY="265dp" />

    <TextView
        android:id="@+id/contactInfoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Info:"
        android:textSize="30sp"
        android:translationX="120dp"
        android:translationY="325dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

    <View
        android:id="@+id/profileDivider"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="?android:attr/listDivider"
        android:translationY="305dp"
        android:visibility="visible"
        tools:visibility="visible" />

    <View
        android:id="@+id/profileDivider2"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="?android:attr/listDivider"
        android:translationY="500dp"
        android:visibility="visible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/EmailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:textSize="20sp"
        android:translationX="30dp"
        android:translationY="440dp" />

    <TextView
        android:id="@+id/PhoneText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone:"
        android:textSize="20sp"
        android:translationX="30dp"
        android:translationY="380dp" />

    <CheckBox
        android:id="@+id/phoneCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make public"
        android:translationX="280dp"
        android:translationY="370dp" />

    <TextView
        android:id="@+id/editTextPhone"
        android:layout_width="160dp"
        android:layout_height="55dp"
        android:ems="10"
        android:inputType="phone"
        android:translationX="100dp"
        android:translationY="370dp" />

    <TextView
        android:id="@+id/emailEditText"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textSize="14sp"
        android:translationX="100dp"
        android:translationY="430dp" />

    <CheckBox
        android:id="@+id/emailCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make public"
        android:translationX="280dp"
        android:translationY="430dp" />

    <TextView
        android:id="@+id/settingsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="30sp"
        android:translationX="150dp"
        android:translationY="520dp" />

    <TextView
        android:id="@+id/notifText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Allow Notifications?"
        android:textSize="20sp"
        android:translationX="100dp"
        android:translationY="580dp" />

    <Switch
        android:id="@+id/notifsSwitch"
        android:layout_width="59dp"
        android:layout_height="50dp"
        android:translationX="300dp"
        android:translationY="570dp" />

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Account"
        android:textColorLink="#DE2020"
        android:translationX="120dp"
        android:translationY="700dp" />

    <Button
        android:id="@+id/savebutton"
        android:text="Save Changes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationX="125dp"
        android:translationY="630dp" />

    <TextView
        android:id="@+id/nameTextEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="150dp"
        android:translationX="160dp"
        android:translationY="220dp" />

    <TextView
        android:id="@+id/gtidTextEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="150dp"
        android:translationX="160dp"
        android:translationY="260dp" />
    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log Out"/>


</FrameLayout>